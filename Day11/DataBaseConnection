package day11;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.sql.Statement;

public class Database_connection {

    public static void main(String[] args) throws SQLException {
        
        try {
       
            Class.forName("com.mysql.cj.jdbc.Driver");
        } 
        catch (ClassNotFoundException e) {
            e.printStackTrace();
        }
        Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/students", "root", "123456789");
        
        Statement st = con.createStatement();
        String query = "CREATE TABLE Name (id INT, StudID VARCHAR(20))";
     
        st.executeUpdate(query);
        
        System.out.println("Table with id and name columns created successfully.");
        
        st.close();
        con.close();
    }
}
